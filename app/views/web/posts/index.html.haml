- model_class = Post
.page-header
  %h1=t '.title'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nickname)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:place)
      %th= model_class.human_attribute_name(:date)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @posts.each do |post|
      %tr
        %td= link_to post.id, post_path(post)
        %td= post.nickname
        %td= post.description
        %td= post.place
        %td= post.date
        %td=l post.created_at
= link_to t('.new', :default => t("helpers.links.new")), new_post_path, :class => 'btn btn-primary'
